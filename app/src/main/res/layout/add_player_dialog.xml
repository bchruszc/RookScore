<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First name"
        android:id="@+id/firstNameLabel"
        android:layout_alignBottom="@+id/firstNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/firstNameText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/firstNameLabel"
        android:layout_toEndOf="@+id/firstNameLabel"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="51dp"
        android:inputType="textPersonName|textCapWords"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last name"
        android:id="@+id/lastNameLabel"
        android:layout_alignBottom="@+id/lastNameText"
        android:layout_toLeftOf="@+id/firstNameText"
        android:layout_toStartOf="@+id/firstNameText"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/lastNameText"
        android:layout_below="@+id/firstNameText"
        android:layout_alignLeft="@+id/firstNameText"
        android:layout_alignStart="@+id/firstNameText"
        android:inputType="textPersonName|textCapWords"
        android:layout_marginBottom="20dp" />
</RelativeLayout>